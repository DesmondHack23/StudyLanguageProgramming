
@using System.Web.Mvc.Html
@model Quiron.LojaVirtual.Dominio.Entidades.Carrinho

<div class="navbar-right">

    <div class="navbar-text">
        <b>Seus produtos:</b>
        @Model.ItensCarrinho.Sum(x => x.Quantidade) item(s), @Model.ObterValorTotal().ToString("c")
